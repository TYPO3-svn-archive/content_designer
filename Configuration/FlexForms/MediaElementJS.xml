<T3DataStructure>
  <meta>
    <langDisable>1</langDisable>
  </meta>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:sheet_general</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
			<settings.flexform.type>
				<TCEforms>
					<label>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_mediatype</label>
					<onChange>reload</onChange>
					<config>
						<type>select</type>
						<size>1</size>
						<maxitems>1</maxitems>
						<items>
							<numIndex index="0" type="array">
								<numIndex index="0">LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_select</numIndex>
								<numIndex index="1"></numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">Audio</numIndex>
								<numIndex index="1">audio</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">Video</numIndex>
								<numIndex index="1">video</numIndex>
							</numIndex>
							<numIndex index="3" type="array">
								<numIndex index="0">YouTube</numIndex>
								<numIndex index="1">youtube</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.flexform.type>
			
			<settings.flexform.audioFile>
				<TCEforms>
					<label>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_audiofile</label>
					<displayCond>FIELD:settings.flexform.type:=:audio</displayCond>
					<config>
						<type>group</type>
						<internal_type>file</internal_type>
						<allowed>mp3</allowed>
						<show_thumbs>0</show_thumbs>
						<maxitems>1</maxitems>
						<size>1</size>
					</config>
				</TCEforms>
			</settings.flexform.audioFile>
			<settings.flexform.videoFile>
				<TCEforms>
					<label>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_videofile</label>
					<displayCond>FIELD:settings.flexform.type:=:video</displayCond>
					<config>
						<type>group</type>
						<internal_type>file</internal_type>
						<allowed>mp4,webm,ogv,ogg,wlv,flv</allowed>
						<show_thumbs>0</show_thumbs>
						<maxitems>1</maxitems>
						<size>1</size>
					</config>
				</TCEforms>
			</settings.flexform.videoFile>
			<settings.flexform.mediaUrl>
				<TCEforms>
					<label>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_url</label>
					<displayCond>FIELD:settings.flexform.type:=:youtube</displayCond>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</settings.flexform.mediaUrl>
			<settings.flexform.caption>
				<TCEforms>
					<label>LLL:EXT:content_designer/Resources/Private/Language/locallang_db.xml:mediajs_subtitle</label>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</settings.flexform.caption>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>